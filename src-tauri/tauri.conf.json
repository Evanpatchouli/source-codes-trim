{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "source-codes-trim",
  "version": "0.1.0",
  "identifier": "com.source-codes-trim.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "source-codes-trim",
        "width": 1280,
        "height": 960,
        "shadow": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}